{
    "manifest_version": 3,
    "name": "Next Price Comparator",
    "version": "1.0",
    "description": "Compare Next product prices UK vs Israel",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://www.next.co.uk/*",
      "https://www.next.co.il/*"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  